{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "removeComments": true,
    "strict": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
